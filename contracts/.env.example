# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Bitfinity EVM Network URLs
BITFINITY_TESTNET_URL=https://testnet.bitfinity.network
BITFINITY_MAINNET_URL=https://mainnet.bitfinity.network

# Gas reporting
REPORT_GAS=false

# Contract verification
ETHERSCAN_API_KEY=no-api-key-needed

# Admin addresses
ADMIN_ADDRESS=0x...
TREASURY_ADDRESS=0x...

# Token configuration
DEFAULT_DECIMALS=18
INITIAL_SUPPLY_MULTIPLIER=1000000

# Security settings
PAUSE_ROLE_ADDRESS=0x...
MINTER_ROLE_ADDRESS=0x...
BURNER_ROLE_ADDRESS=0x...
