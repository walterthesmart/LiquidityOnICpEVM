{
  "name": "multi-network-utilities",
  "version": "2.0.0",
  "description": "Multi-network utilities for Bitfinity EVM and Ethereum networks",
  "main": "mint-bft-tokens.js",
  "scripts": {
    "mint": "node mint-bft-tokens.js",
    "mint:help": "node mint-bft-tokens.js --help",
    "mint:dry-run": "node mint-bft-tokens.js --dry-run",
    "balance": "node balance-checker.js",
    "balance:sepolia": "node mint-bft-tokens.js --action balance --network sepolia",
    "faucet:sepolia": "node mint-bft-tokens.js --action faucet --network sepolia",
    "sepolia": "node sepolia-eth-utils.js",
    "sepolia:help": "node sepolia-eth-utils.js --help",
    "test": "node test-minting.js",
    "test:integration": "node test-integration.js",
    "test:integration:full": "node test-integration.js --full-test",
    "test:sepolia": "node test-integration.js --network sepolia",
    "test:frontend": "node test-frontend-integration.js",
    "test:frontend:verbose": "node test-frontend-integration.js --verbose"
  },
  "keywords": [
    "bitfinity",
    "ethereum",
    "sepolia",
    "evm",
    "blockchain",
    "tokens",
    "minting",
    "testnet",
    "faucet"
  ],
  "author": "Liquidity on ICP EVM Project",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
