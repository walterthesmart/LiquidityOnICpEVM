# Multi-Network EVM Configuration
# Copy this file to .env and fill in your values

# Bitfinity EVM Configuration
BITFINITY_PRIVATE_KEY=your_bitfinity_private_key_here
BITFINITY_API_KEY=your_bitfinity_api_key_here

# Ethereum Sepolia Testnet Configuration
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas reporting (optional)
REPORT_GAS=false

# Coinmarketcap API key for gas reporting (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Network selection for deployment (bitfinity_testnet|sepolia|localhost)
NETWORK=bitfinity_testnet

# Contract deployment settings
DEPLOY_ALL_STOCKS=true
VERIFY_CONTRACTS=true

# Nigerian Stock Exchange API (if needed)
NGX_API_KEY=your_ngx_api_key
NGX_API_URL=https://api.ngxgroup.com

# Frontend integration settings
GENERATE_FRONTEND_FILES=true
FRONTEND_OUTPUT_DIR=../front-end/src/contracts
