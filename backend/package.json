{
  "name": "liquidity-bitfinity-contracts",
  "version": "3.0.0",
  "description": "Bitfinity EVM smart contracts for Nigerian Stock Exchange tokenization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean && rimraf dist exports",
    "// --- CONTRACT COMPILATION ---": "",
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
    "// --- DEPLOYMENT ---": "",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network bitfinity_testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network bitfinity_mainnet",
    "deploy:all-stocks": "hardhat run scripts/deploy-all-stocks.ts",
    "deploy:all-stocks:testnet": "hardhat run scripts/deploy-all-stocks.ts --network bitfinity_testnet",
    "deploy:all-stocks:mainnet": "hardhat run scripts/deploy-all-stocks.ts --network bitfinity_mainnet",
    "// --- VERIFICATION ---": "",
    "verify": "hardhat verify",
    "verify:all": "hardhat run scripts/verify-all.ts",
    "// --- TESTING ---": "",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "// --- DEVELOPMENT ---": "",
    "dev": "npm run deploy:testnet",
    "start": "npm run deploy:testnet",
    "prod": "npm run deploy:mainnet",
    "// --- HARDHAT TASKS ---": "",
    "node": "hardhat node",
    "console": "hardhat console",
    "// --- LINTING ---": "",
    "lint": "eslint contracts/**/*.sol scripts/**/*.ts test/**/*.ts",
    "lint:fix": "eslint contracts/**/*.sol scripts/**/*.ts test/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "// --- UTILITIES ---": "",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "help": "hardhat help"
  },
  "keywords": [
    "bitfinity",
    "evm",
    "smart-contracts",
    "nigerian-stocks",
    "tokenization",
    "defi",
    "erc20",
    "solidity",
    "hardhat"
  ],
  "author": "Walter Nwaugo",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "chai": "^4.2.0",
    "eslint": "^9.31.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.8",
    "rimraf": "^5.0.10",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
}
